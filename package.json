{
  "name": "nsec-roles",
  "version": "0.1.3",
  "description": "A scoped role library for node.js persisted with loopback juggler",
  "repository": "taoyuan/nsec-roles",
  "author": "Yuan Tao",
  "license": "MIT",
  "keywords": [
    "node",
    "acl",
    "security",
    "role",
    "rbac",
    "scope",
    "scoped",
    "permission",
    "permissions"
  ],
  "main": "./src/index.js",
  "engines": {
    "node": ">=6"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "dependencies": {
    "arrify": "^1.0.1",
    "bluebird": "^3.4.6",
    "joi": "^10.0.6",
    "lodash": "^4.17.2",
    "needs": "^1.0.3",
    "shortid": "^2.2.6"
  },
  "optionalDependencies": {
    "loopback-datasource-juggler": "^2.53.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.12.2",
    "eslint-plugin-mocha": "^4.7.0",
    "loopback-connector-mongodb": "^1.17.0",
    "mocha": "^3.2.0",
    "needs": "^1.0.3",
    "nyc": "^10.0.0",
    "xo": "^0.17.1"
  },
  "scripts": {
    "lint": "eslint src test",
    "test": "npm run lint && nyc mocha test/**/*.test.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "publish:docs": "easystatic deploy docs --repo taoyuan/nsec-roles",
    "start": "easystatic start docs"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
