{
  "name": "rolein",
  "version": "0.0.0",
  "description": "A scoped role library for node.js persisted with loopback juggler",
  "repository": "taoyuan/rolein",
  "author": "Yuan Tao",
  "license": "MIT",
  "keywords": [],
  "main": "./src/index.js",
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "dependencies": {
    "arrify": "^1.0.1",
    "babel-runtime": "^6.20.0",
    "bluebird": "^3.4.6",
    "joi": "^10.0.6",
    "lodash": "^4.17.2",
    "needs": "^1.0.3",
    "shortid": "^2.2.6"
  },
  "optionalDependencies": {
    "loopback-datasource-juggler": "^2.53.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "coveralls": "^2.11.15",
    "del": "^2.2.2",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-mocha": "^4.7.0",
    "eslint-plugin-react": "^6.8.0",
    "istanbul": "^1.0.0-alpha.2",
    "loopback-connector-mongodb": "^1.17.0",
    "mocha": "^3.2.0",
    "rollup": "^0.37.0",
    "rollup-plugin-babel": "^2.7.1",
    "sinon": "^2.0.0-pre",
    "xo": "^0.17.1"
  },
  "scripts": {
    "lint": "eslint src test tools",
    "test": "mocha --compilers js:babel-register",
    "test:watch": "mocha --compilers js:babel-register --reporter min --watch",
    "test:cover": "babel-node ./node_modules/istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "build": "node tools/build",
    "publish:docs": "easystatic deploy docs --repo taoyuan/rolein",
    "start": "easystatic start docs"
  }
}
